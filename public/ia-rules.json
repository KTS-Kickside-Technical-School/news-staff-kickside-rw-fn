{
    "document": {
        "style": {
            "background-color": "#ffffff",
            "margin": "0 auto",
            "max-width": "750px"
        }
    },
    "header": {
        "style": {
            "background-color": "#0d3b66",
            "text-align": "center",
            "padding": "20px"
        },
        "title": {
            "style": {
                "color": "#ffffff",
                "font-family": "Helvetica, Arial, sans-serif",
                "font-size": "24px"
            }
        },
        "subtitle": {
            "style": {
                "color": "#cccccc",
                "font-size": "14px"
            }
        },
        "logo": {
            "url": "https://www.kickside.rw/logo.svg",
            "height": 60,
            "width": 180
        }
    },
    "body": {
        "style": {
            "font-family": "Georgia, serif",
            "font-size": "16px",
            "line-height": "1.6",
            "color": "#000000"
        },
        "heading": {
            "style": {
                "font-size": "22px",
                "font-weight": "bold",
                "color": "#222222"
            }
        },
        "subheading": {
            "style": {
                "font-size": "18px",
                "font-weight": "bold",
                "color": "#333333"
            }
        },
        "link": {
            "style": {
                "color": "#0d3b66",
                "text-decoration": "underline"
            }
        }
    },
    "footer": {
        "style": {
            "background-color": "#f0f0f0",
            "padding": "10px",
            "text-align": "center",
            "color": "#999999",
            "font-size": "12px"
        }
    },
    "ad": {
        "placement": "bottom",
        "type": "banner",
        "style": {
            "height": "50px"
        }
    }
}